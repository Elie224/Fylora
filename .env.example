# DATABASE (MongoDB)
# Root user for MongoDB Docker image
MONGO_INITDB_ROOT_USERNAME=supfile_root
MONGO_INITDB_ROOT_PASSWORD=changeme_secure_password_here
MONGO_INITDB_DATABASE=supfile
DB_HOST=db
DB_PORT=27017
MONGO_URI=mongodb://supfile_root:changeme_secure_password_here@db:27017/supfile?authSource=admin

# JWT
JWT_SECRET=your_jwt_secret_key_here_min_32_chars_strong
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_strong

# SERVER
NODE_ENV=development
SERVER_PORT=5000
SERVER_HOST=0.0.0.0
API_URL=http://localhost:5000

# FRONTEND
VITE_API_URL=http://localhost:5000

# OAUTH (optional - configure if implementing OAuth)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# FILE UPLOAD
MAX_FILE_SIZE=5368709120
UPLOAD_DIR=/usr/src/app/uploads

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# EMAIL (for future notifications)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
